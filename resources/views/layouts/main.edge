<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{{ title || 'Product Catalog' }}</title>

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

  <!-- Custom CSS -->
  <link rel="stylesheet" href="/css/style.css" />
</head>
<body>
  <!-- Search + Category Filter -->
<nav class="navbar navbar-expand-lg navbar-light" style="background-color:white;">
  <div class="container-fluid">
    <span class="navbar-brand me-3">Search Products</span>
    <form action="/" method="GET" class="d-flex flex-nowrap align-items-center w-100" style="gap: 0.75rem;">
      <!-- Search Field -->
      <input
        type="text"
        class="form-control"
        name="search"
        placeholder="Search by name"
        aria-label="Search"
        value="{{ filter?.search || '' }}"
        style="max-width: 200px;"
      />

      <!-- Category Dropdown -->
      <select
        class="form-select"
        name="category_id"
        aria-label="Filter by category"
        style="max-width: 180px;"
      >
        <option value="">All Categories</option>
        @each(category in categories)
          <option value="{{ category.id }}" {{ filter?.category_id == category.id.toString() ? 'selected' : '' }}>
            {{ category.name }}
          </option>
        @endeach
      </select>

      <!-- Submit Button -->
      <button class="btn btn-outline-primary" type="submit">
        <i class="fas fa-search"></i> Filter
      </button>

      <!-- Reset Button -->
      <a href="/" class="btn btn-outline-secondary">
        <i class="fas fa-undo"></i> Reset
      </a>
    </form>
  </div>
</nav>
  <!-- Navigation Bar -->
  <nav class="navbar navbar-expand-lg navbar-light" style="background-color: rgb(246, 205, 212);">
    <div class="container">
      <a class="navbar-brand" href="/">Adonis Store</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navMenu">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navMenu">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
          <li class="nav-item"><a class="nav-link" href="/products">Products</a></li>
          <li class="nav-item"><a class="nav-link" href="/categories">Categories</a></li>
           @if(auth.user)
    <form method="POST" action="/logout" style="display:inline">
      {{ csrfField() }}
      <button class="btn btn-link">Logout</button>
    </form>
  @else
    <a href="/login" class="btn btn-outline-primary">Login</a>
  @endif

        </ul>
      </div>
    </div>
  </nav>

  <!-- Flash Messages -->
  <div class="container mt-3">
    @if(flashMessages.has('message'))
      <div class="alert alert-success">{{ flashMessages.get('message') }}</div>
    @endif
    @if(flashMessages.has('error'))
      <div class="alert alert-danger">{{ flashMessages.get('error') }}</div>
    @endif
  </div>

  <!-- Main Content -->
  <main class="container mt-4 mb-5">
    {{{ await $slots.main() }}}
  </main>

  <!-- Footer -->
  <footer class=" py-4 text-center text-muted" style="background-color: rgb(246, 205, 212);;">
    <p class="mb-1">Product Catalog built with <a href="https://adonisjs.com">Adonis.js</a> and <a href="https://getbootstrap.com">Bootstrap</a>.</p>
    <p><a href="#">Back to top</a></p>
  </footer>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>









